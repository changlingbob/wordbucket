{
  "compilerOptions": {
    "module": "commonjs",
    "lib": ["es2015"],
    "jsx": "react",
    "sourceMap": true,
    "outDir": "./lib/",
    "noEmit": false,
    "strict": true,
    "moduleResolution": "node",
    "baseUrl": ".",
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "esModuleInterop": true
  },
  "files": ["./src/index.ts"],
  "include": ["src/**/*", "node_modules/@types/jest"],
  "exclude": ["src/**/*.spec.*"]
}
