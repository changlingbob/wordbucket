{
  "compilerOptions": {
    "target": "es2019",
    "module": "es2022",
    "lib": ["es2019", "dom"],
    "jsx": "react",
    "sourceMap": true,
    "outDir": "./out/",
    "noEmit": false,
    "strict": true,
    "moduleResolution": "node",
    "baseUrl": ".",
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "esModuleInterop": true
  },
  "files": ["./src/index.ts"],
  "include": ["src/**/*", "node_modules/@types/jest"]
}
